{
  "name": "safetybot",
  "version": "1.0.0",
  "description": "Public Safety Chatbot",
  "main": "server.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "npm install && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cohere-ai": "^7.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}